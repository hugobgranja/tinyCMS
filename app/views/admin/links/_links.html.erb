<div class="panel panel-success">
  <div class="panel-heading">
    <h3 class="panel-title">
      Links
      <button type="button"
        class="btn btn-success btn-new btn-sm pull-right"
        data-toggle="modal" data-target="#new-link-">

        <%= icon 'link', 'New', class: 'fa-fw' %>
      </button>
    </h3>
  </div>
  <div class="panel-body" id="links">
    <% @links.each do |link| %>
      <%= render partial: 'admin/links/link', locals: { link: link } %>
    <% end %>
  </div>
</div>

<div id="new-link-modal">
  <%= render partial: 'admin/links/form_modal', locals: { link: Link.new, action: 'new' } %>
</div>